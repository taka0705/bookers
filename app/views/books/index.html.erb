<h2>Books</h2>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Body</th>
    </tr>
<% @books.each do |book| %>
<tr>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
</tr>
<% end %>
</table>


<h2>New book</h2>

<%= form_with model:@book,url:'/books',method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>